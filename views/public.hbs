<h2>Listado de películas</h2>
<hr>
<table class="table table-striped table-hover">
    <thead class="table-secondary">
        <tr>
            <th class="bg-primary" style="color: white;" scope="col">Nombre</th>
            <th class="bg-primary" style="color: white;" scope="col">Año</th>
        </tr>
    </thead>
    <tbody>
        {{#each peliculas}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.year}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
