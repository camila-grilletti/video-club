<h1>Listado de películas</h1>
<hr>
<a href="/api/peliculas/create" class="btn btn-info">Crear película</a>
<hr>
<table class="table table-striped table-hover">
    <thead class="table-secondary">
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Año</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        {{#each peliculas}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.year}}</td>
            <td>
                <a href="/api/peliculas/edit/{{this._id}}" class="btn btn-warning">Editar</a>
            </td>
            <td>
                <form action="/api/peliculas/{{this._id}}?_method=DELETE" method="post">
                    <button class="btn btn-danger">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>