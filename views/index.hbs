<div style="display: flex; flex-direction: row; align-items: center; justify-content:space-between;">
<h2>Listado de películas</h2>
<a href="/api/peliculas/create" class="btn btn-info">Crear película</a>
</div>
<hr>
<table class="table table-striped table-hover">
    <thead class="table-secondary">
        <tr class="bg-primary">
            <th class="bg-primary" style="color: white;" scope="col">Nombre</th>
            <th class="bg-primary" style="color: white;" scope="col">Año</th>
            <th class="bg-primary" style="color: white;" scope="col">Editar</th>
            <th class="bg-primary" style="color: white;" scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        {{#each peliculas}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.year}}</td>
            <td>
                <a href="/api/peliculas/edit/{{this._id}}" class="btn btn-warning btn-sm">Editar</a>
            </td>
            <td>
                <form action="/api/peliculas/{{this._id}}?_method=DELETE" method="post">
                    <button class="btn btn-danger btn-sm">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
