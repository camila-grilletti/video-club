<body class="bg-body-tertiary">
    <div class="container">
        <header class="d-flex flex-wrap justify-content-center py-3">
            <a href="/"
                class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <img src="https://cdn.icon-icons.com/icons2/1056/PNG/512/movies_icon-icons.com_76714.png" alt=""
                    style="width: 50px; height: 50px; margin-right: 1em;">
                <span class="fs-4">Video Club</span>
            </a>
            <ul class="nav nav-pills" style="display: flex; flex-direction: row; gap: 1em; align-items: center;">
                {{#if user}}
                <li class="nav-item">¡Hola, {{ user }}!</li>
                <li class="nav-item"><a href="/api/auth/logout" class="btn btn-danger">Salir</a></li>
                <li class="nav-item"><a href="/api/peliculas" class="btn btn-secondary">Ir al Panel</a></li>
                {{else}}
                <li class="nav-item"><a href="/api/auth/signin" class="btn btn-primary">Iniciar sesión</a></li>
                <li class="nav-item"><a href="/api/auth/signup" class="btn btn-warning">Crear cuenta</a></li>
                {{/if}}
            </ul>
        </header>
    </div>

    <div class="container mt-3 p-5">
        {{{ body }}}
    </div>

